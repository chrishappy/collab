<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/left_and_right_gutters"
    android:paddingRight="@dimen/left_and_right_gutters"
    tools:context=".nodeForms.AssignmentCreateFormActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/attachmentContainer"
        android:background="#65E4A6">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/attachmentsOverviewRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>