<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/left_and_right_gutters"
    android:paddingRight="@dimen/left_and_right_gutters"
    tools:context=".nodeForms.AssignmentCreateFormActivity" >

    <!-- Dummy Element -->
    <LinearLayout
        android:id="@+id/commentAttachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".attachmentDialogs.AddCommentDialogFragment" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/please_add_comment" />

        <EditText
            android:id="@+id/editComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fileAttachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/commentAttachment"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_file_is_selected" />

        <Button
            android:id="@+id/upload"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:text="@string/upload" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/recordingAttachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/fileAttachment"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/recordingLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/attachment__form__recording" />

        <Button
            android:id="@+id/editAddRecording"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:text="@string/attachment__form__recording" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zoomAttachment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/recordingAttachment"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/zoomLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/attachment__form__zoomLabel" />

        <Button
            android:id="@+id/editZoomMeeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attachment__form__scheduleZoomMeeting" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="end">

        <Button
            android:id="@+id/cancelAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/materialButtonOutlinedStyle"
            android:text="@string/assignment__form__cancel" />

        <Button
            android:id="@+id/saveAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?attr/materialButtonOutlinedStyle"
            android:text="@string/assignment__form__save" />
    </LinearLayout>

